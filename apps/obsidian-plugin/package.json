{
	"name": "obsidian-task-master-plugin",
	"version": "1.0.0",
	"description": "TaskMaster AI integration plugin for Obsidian",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"watch": "node esbuild.config.mjs --watch",
		"test": "jest",
		"install-plugin": "node install-plugin.js",
		"install-to-vault": "node install-plugin.js"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"taskmaster",
		"ai",
		"task-management"
	],
	"author": "TaskMaster Team",
	"license": "MIT WITH Commons-Clause",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4",
		"jest": "^29.0.0",
		"@types/jest": "^29.0.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "1.13.3"
	}
}
